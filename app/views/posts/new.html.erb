<% form_for(@post) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :topic_id, :value => @topic.id %>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
    <div class="clear"></div>
    <%= link_to "Use RedCloth in your posts", "http://redcloth.org/", :target => "_blank" %>
  </div>

  <div class="actions">
    <%= f.submit "Create" %>
  </div>

<% end %>
